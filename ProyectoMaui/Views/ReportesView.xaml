<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:ProyectoMaui.ViewModels"
             x:Class="ProyectoMaui.Views.ReportesView"
             BackgroundColor="#FFF0FA"
             Title="Reportes de Ventas">

    <ContentPage.BindingContext>
        <vm:ReportesViewModel />
    </ContentPage.BindingContext>

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">
            <Image Source="report_icon.png" HeightRequest="100" HorizontalOptions="Center" />
            <Label Text="Reportes de Ventas" FontSize="24" FontAttributes="Bold" HorizontalOptions="Center" />

            <CollectionView ItemsSource="{Binding Reportes}">
                <CollectionView.ItemsLayout>
                    <GridItemsLayout Orientation="Vertical" Span="2"/>
                </CollectionView.ItemsLayout>

                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame BackgroundColor="White"
                               CornerRadius="20"
                               Padding="15"
                               Margin="10"
                               HasShadow="True">
                            <VerticalStackLayout Spacing="10" HorizontalOptions="Center">
                                <Image Source="report_icon.png" HeightRequest="60" />
                                <Label Text="{Binding Fecha}" FontAttributes="Bold" HorizontalOptions="Center" />
                                <Label Text="{Binding Total}" TextColor="DarkGreen" HorizontalOptions="Center" />
                                <Label Text="{Binding Responsable}" FontSize="12" TextColor="Gray" HorizontalOptions="Center" />
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
